<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Schedule">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoSchedule"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.008"
            app:srcCompat="@drawable/schedule" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="368dp"
            android:layout_height="529dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoSchedule"
            app:layout_constraintVertical_bias="0.091">

            <TextView
                android:id="@+id/tvDiseaseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Disease Name" />

            <EditText
                android:id="@+id/etDiseaseName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvMedicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Medicine Name" />

            <EditText
                android:id="@+id/etMedicineName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvDrugType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Type of Drug" />

            <Spinner
                android:id="@+id/spinnerDrugType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dropdown"
                android:background="@color/input"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp"/>

            <TextView
                android:id="@+id/tvAmountDrug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Amount of Drug" />

            <EditText
                android:id="@+id/etAmountDrug"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvUsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Used" />

            <EditText
                android:id="@+id/etUsed"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvDuring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="During" />

            <Spinner
                android:id="@+id/spinnerDuring"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dropdown"
                android:background="@color/input"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp"/>

            <TextView
                android:id="@+id/tvStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Start At" />

            <Spinner
                android:id="@+id/spinnerStart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dropdown"
                android:background="@color/input"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp"/>

        </LinearLayout>


        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/gold"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.238"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/maroon"
            android:text="Cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.768"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>