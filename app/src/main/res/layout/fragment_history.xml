<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".history">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageHistory"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/history"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp"
            android:paddingBottom="30dp"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="368dp"
            android:layout_height="701dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageHistory"
            app:layout_constraintVertical_bias="0.091">

            <TextView
                android:id="@+id/tvGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="GENERAL INFORMATION"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tvDiseaseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Disease Name" />

            <EditText
                android:id="@+id/etDiseaseName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvMedicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Medicine Name" />

            <EditText
                android:id="@+id/etMedicineName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvDrugType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Type of Drug" />

            <EditText
                android:id="@+id/ettypeofdrug"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvAmountDrug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Amount of Drug" />

            <EditText
                android:id="@+id/etAmountDrug"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvUsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Used" />

            <EditText
                android:id="@+id/etUsed"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvDuring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="During" />

            <EditText
                android:id="@+id/etDuring"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/tvHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="HISTORY OF DRUG TAKING"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/lastTake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Last to Take Medicine" />

            <EditText
                android:id="@+id/etLastTake"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/TimeHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Time" />

            <EditText
                android:id="@+id/etTimeHistory"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/NextTake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Next Take Time" />

            <EditText
                android:id="@+id/etNextTake"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:id="@+id/RemainingDrug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Remaining Drug Iventory" />

            <EditText
                android:id="@+id/etRemainingDrug"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="294dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/BtnBackHistory"
            android:layout_width="410dp"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/maroon"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="BACK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.768"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>