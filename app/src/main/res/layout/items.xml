<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="16dp"
    app:cardElevation="10dp"
    android:backgroundTint="@color/maroon">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:background="@drawable/element1_home"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvPenyakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="Nama Penyakit"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.103" />

        <TextView
            android:id="@+id/tvObat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Nama Obat"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.414" />

        <Button
            android:id="@+id/doBtn"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/header"
            android:text="Do It"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvObat" />

        <Button
            android:id="@+id/historyBtn"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/element2_home"
            android:text="History"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.377"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvObat" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="101dp"
            android:layout_height="107dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/element5_home"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingBottom="74dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.538">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERIOD"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsbold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="101dp"
            android:layout_height="76dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/element6_home"
            android:clipChildren="false"
            android:gravity="center"
            android:clipToPadding="false"
            android:paddingHorizontal="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MORNING"
                android:textColor="#FBE6CF"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>